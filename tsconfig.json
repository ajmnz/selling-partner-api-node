{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": false,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    ".yarn",
    ".git",
    ".dev",
    ".github",
    ".husky",
    ".vscode",
    "dist",
    "dist*",
    "**/dist/*",
    "**/node_modules/*"
  ]
}
